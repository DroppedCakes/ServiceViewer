<UserControl
    x:Class="MiniRisViewer.ServiceStatus.Views.ServiceStatus"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MiniRisViewer.ServiceStatus.ViewModels"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="768"
    d:DesignWidth="1024"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <local:ServiceStatusViewModel />
    </UserControl.DataContext>
    <Grid>
        <DockPanel>
            <GroupBox
                Margin="10"
                DockPanel.Dock="Top"
                Header="サービス稼働状況">
                <StackPanel
                    VerticalAlignment="Top"
                    DockPanel.Dock="Top"
                    Orientation="Vertical">
                    <materialDesign:Card Margin="16" Padding="32">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{DynamicResource MaterialDesignTitleTextBlock}" Text="FileImporter" />
                            <TextBlock Style="{DynamicResource MaterialDesignTitleTextBlock}" Text="{Binding ImporterStatus.Value}" />
                        </StackPanel>
                    </materialDesign:Card>
                    <materialDesign:Card Margin="16" Padding="32">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{DynamicResource MaterialDesignTitleTextBlock}" Text="MWMResponder" />
                            <TextBlock Style="{DynamicResource MaterialDesignTitleTextBlock}" Text="{Binding ResponderStatus.Value}" />
                        </StackPanel>
                    </materialDesign:Card>
                    <materialDesign:Card Margin="16" Padding="32">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{DynamicResource MaterialDesignTitleTextBlock}" Text="ScpCore" />
                            <TextBlock Style="{DynamicResource MaterialDesignTitleTextBlock}" Text="{Binding ScpCoreStatus.Value}" />
                        </StackPanel>
                    </materialDesign:Card>
                    <materialDesign:Card Margin="16" Padding="32">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{DynamicResource MaterialDesignTitleTextBlock}" Text="Asc" />
                            <TextBlock Style="{DynamicResource MaterialDesignTitleTextBlock}" Text="{Binding AscStatus.Value}" />
                        </StackPanel>
                    </materialDesign:Card>
                    <materialDesign:Card Margin="16" Padding="32">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{DynamicResource MaterialDesignTitleTextBlock}" Text="MppsReceiver" />
                            <TextBlock Style="{DynamicResource MaterialDesignTitleTextBlock}" Text="{Binding MppsStatus.Value}" />
                        </StackPanel>
                    </materialDesign:Card>
                </StackPanel>
            </GroupBox>


            <StackPanel
                VerticalAlignment="Top"
                DockPanel.Dock="Top"
                Orientation="Horizontal">
                <Button
                    Margin="5"
                    Command="{Binding StartCommand}"
                    Content="START" />
                <Button
                    Margin="5"
                    Command="{Binding StopCommand}"
                    Content="PAUSE" />
                <Button
                    Margin="5"
                    Command="{Binding RestartServiceCommand}"
                    Content="全てのサービスを再起動" />
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>
