<UserControl
    x:Class="MiniRisViewer.ServiceStatus.Views.ServiceStatus"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MiniRisViewer.ServiceStatus.ViewModels"
    xmlns:local1="clr-namespace:MiniRisViewer.ServiceStatus.Helper"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    d:DesignHeight="380"
    d:DesignWidth="950"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <UserControl.Resources>
        <local1:StatusConverter x:Key="StatusConverter" />
    </UserControl.Resources>
    <UserControl.DataContext>
        <local:ServiceStatusViewModel />
    </UserControl.DataContext>
    <xctk:BusyIndicator BusyContent="{Binding ProgressMessage.Value}" IsBusy="{Binding InProgress.Value}">


        <GroupBox Margin="16" Header="サービス稼働状況">

            <DockPanel>

                <Grid Width="auto" Height="auto">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <WrapPanel
                        Grid.Row="0"
                        Margin="5,5,5,5"
                        Background="{DynamicResource AccentColorBrush4}">
                        <materialDesign:Card
                            Width="350"
                            Height="42"
                            Margin="5,5,5,5"
                            Padding="0">
                            <TextBlock
                                Margin="10,5,10,5"
                                VerticalAlignment="Center"
                                Style="{DynamicResource MaterialDesignTitleTextBlock}"
                                Text="{Binding ImporterDisplayName}" />
                        </materialDesign:Card>
                        <materialDesign:Card
                            Width="200"
                            Height="42"
                            Margin="5,5,5,5"
                            Padding="0">
                            <TextBlock
                                Margin="10,5,10,5"
                                VerticalAlignment="Center"
                                Style="{DynamicResource MaterialDesignTitleTextBlock}"
                                Text="{Binding ImporterStatus.Value　 , Converter={StaticResource StatusConverter}}" />
                        </materialDesign:Card>
                        <materialDesign:Card
                            Width="300"
                            Height="42"
                            Margin="5,5,5,5"
                            Padding="0">
                            <StackPanel
                                VerticalAlignment="Top"
                                DockPanel.Dock="Top"
                                Orientation="Horizontal">
                                <Button
                                    Width="90"
                                    Margin="5"
                                    Command="{Binding ImporterStartCommand}"
                                    Content="Start" />
                                <Button
                                    Width="90"
                                    Margin="5"
                                    Command="{Binding ImporterStopCommand}"
                                    Content="Stop" />
                                <Button
                                    Width="90"
                                    Margin="5"
                                    Command="{Binding ShowImporterLogCommand}"
                                    Content="ShowLog" />
                            </StackPanel>
                        </materialDesign:Card>
                    </WrapPanel>

                    <WrapPanel
                        Grid.Row="2"
                        Margin="5,5,5,5"
                        Background="{DynamicResource AccentColorBrush4}">
                        <materialDesign:Card
                            Width="350"
                            Height="42"
                            Margin="5,5,5,5"
                            Padding="0">
                            <TextBlock
                                Margin="10,5,10,5"
                                VerticalAlignment="Center"
                                Style="{DynamicResource MaterialDesignTitleTextBlock}"
                                Text="{Binding ScpCoreDisplayName}" />
                        </materialDesign:Card>
                        <materialDesign:Card
                            Width="200"
                            Height="42"
                            Margin="5,5,5,5"
                            Padding="0">
                            <TextBlock
                                Margin="10,5,10,5"
                                VerticalAlignment="Center"
                                Style="{DynamicResource MaterialDesignTitleTextBlock}"
                                Text="{Binding ScpCoreStatus.Value　 , Converter={StaticResource StatusConverter}}" />
                        </materialDesign:Card>
                        <materialDesign:Card
                            Width="300"
                            Height="42"
                            Margin="5,5,5,5"
                            Padding="0">
                            <StackPanel
                                VerticalAlignment="Top"
                                DockPanel.Dock="Top"
                                Orientation="Horizontal">
                                <Button
                                    Width="90"
                                    Margin="5"
                                    Command="{Binding ScpCoreStartCommand}"
                                    Content="Start" />
                                <Button
                                    Width="90"
                                    Margin="5"
                                    Command="{Binding ScpCoreStopCommand}"
                                    Content="Stop" />
                                <Button
                                    Width="90"
                                    Margin="5"
                                    Command="{Binding ShowScpCoreLogCommand}"
                                    Content="ShowLog" />
                            </StackPanel>
                        </materialDesign:Card>
                    </WrapPanel>

                    <WrapPanel
                        Grid.Row="3"
                        Margin="5,5,5,5"
                        Background="{DynamicResource AccentColorBrush4}">
                        <materialDesign:Card
                            Width="350"
                            Height="42"
                            Margin="5,5,5,5"
                            Padding="0">
                            <TextBlock
                                Margin="10,5,10,5"
                                VerticalAlignment="Center"
                                Style="{DynamicResource MaterialDesignTitleTextBlock}"
                                Text="{Binding AscDisplayName}" />
                        </materialDesign:Card>
                        <materialDesign:Card
                            Width="200"
                            Height="42"
                            Margin="5,5,5,5"
                            Padding="0">
                            <TextBlock
                                Margin="10,5,10,5"
                                VerticalAlignment="Center"
                                Style="{DynamicResource MaterialDesignTitleTextBlock}"
                                Text="{Binding AscStatus.Value　 , Converter={StaticResource StatusConverter}}" />
                        </materialDesign:Card>
                        <materialDesign:Card
                            Width="300"
                            Height="42"
                            Margin="5,5,5,5"
                            Padding="0">
                            <StackPanel
                                VerticalAlignment="Top"
                                DockPanel.Dock="Top"
                                Orientation="Horizontal">
                                <Button
                                    Width="90"
                                    Margin="5"
                                    Command="{Binding AscStartCommand}"
                                    Content="Start" />
                                <Button
                                    Width="90"
                                    Margin="5"
                                    Command="{Binding AscStopCommand}"
                                    Content="Stop" />
                                <Button
                                    Width="90"
                                    Margin="5"
                                    Command="{Binding ShowAscLogCommand}"
                                    Content="ShowLog" />
                            </StackPanel>
                        </materialDesign:Card>
                    </WrapPanel>

                    <WrapPanel
                        Grid.Row="4"
                        Margin="5,5,5,5"
                        Background="{DynamicResource AccentColorBrush4}">
                        <materialDesign:Card
                            Width="350"
                            Height="42"
                            Margin="5,5,5,5"
                            Padding="0">
                            <TextBlock
                                Margin="10,5,10,5"
                                VerticalAlignment="Center"
                                Style="{DynamicResource MaterialDesignTitleTextBlock}"
                                Text="{Binding MppsDisplayName}" />
                        </materialDesign:Card>
                        <materialDesign:Card
                            Width="200"
                            Height="42"
                            Margin="5,5,5,5"
                            Padding="0">
                            <TextBlock
                                Margin="10,5,10,5"
                                VerticalAlignment="Center"
                                Style="{DynamicResource MaterialDesignTitleTextBlock}"
                                Text="{Binding MppsStatus.Value　 , Converter={StaticResource StatusConverter}}" />
                        </materialDesign:Card>
                        <materialDesign:Card
                            Width="300"
                            Height="42"
                            Margin="5,5,5,5"
                            Padding="0">
                            <StackPanel
                                VerticalAlignment="Top"
                                DockPanel.Dock="Top"
                                Orientation="Horizontal">
                                <Button
                                    Width="90"
                                    Margin="5"
                                    Command="{Binding MppsStartCommand}"
                                    Content="Start" />
                                <Button
                                    Width="90"
                                    Margin="5"
                                    Command="{Binding MppsStopCommand}"
                                    Content="Stop" />
                                <Button
                                    Width="90"
                                    Margin="5"
                                    Command="{Binding ShowMppsLogCommand}"
                                    Content="ShowLog" />
                            </StackPanel>
                        </materialDesign:Card>
                    </WrapPanel>

                    <StackPanel Grid.Row="5" Orientation="Horizontal">
                        <Button
                            Margin="5"
                            Command="{Binding RestartServiceCommand}"
                            Content="全てのサービスを再起動" />
                    </StackPanel>

                </Grid>

            </DockPanel>
        </GroupBox>


    </xctk:BusyIndicator>
</UserControl>